{
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "functions": "never"
    }],
    "no-warning-comments": 1,
    "no-plusplus": 0,
    "no-restricted-properties": [2, {
        "object": "math",
        "property": "pow"
    }]
  }
}
